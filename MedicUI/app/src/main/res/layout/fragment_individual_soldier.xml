<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorBlack"
    tools:context="com.drdc.medicui.MainActivity$PlaceholderFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/searchbar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layoutSearch">

            <ImageView
                android:layout_width="29dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/search3"
                android:background="@color/colorGrey"
                android:id="@+id/serchIcon" />

            <EditText
                android:layout_height="match_parent"
                android:inputType="text"
                android:id="@+id/etSearch"
                android:textAlignment="center"
                android:hint="Search for Soldier Name"
                android:textColor="@color/colorGrey"
                android:textColorHint="@color/colorBlack"
                android:textSize="@dimen/fontsize"
                android:backgroundTint="@color/colorGrey"
                android:layout_marginRight="50dp"
                android:background="@color/colorGrey"
                android:layout_width="230dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_help2"
                android:id="@+id/ibHelp"
                android:background="@color/colorBlack" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/searchbar"
        android:id="@+id/soldierInfo">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/layoutName"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:text="Soldier Name :"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvSoldierName"
                    android:layout_weight="0.64"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/fontsize2"
                    android:layout_width="wrap_content" />

                <TextView
                    android:text="Gender :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvGender"
                    android:layout_weight="0.64"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/fontsize2"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/layoutGender"
                android:layout_weight="0.64">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/etSoldierName"
                        android:layout_weight="1"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/fontsize2"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/etGender"
                        android:layout_weight="1"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/fontsize2"/>
                </LinearLayout>

                <TextView
                    android:text="Age :"
                    android:layout_width="66dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvAge"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/fontsize2"
                    android:textAlignment="center" />

                <EditText
                    android:layout_width="20dp"
                    android:layout_height="21dp"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/etAge"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/fontsize2"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.29" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutBody">

            <TextView
                android:text="Body Orientation :"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/tvBody"
                android:layout_weight="1"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/fontsize2"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/standing_inactive"
                android:id="@+id/ivStanding"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/run2"
                android:id="@+id/ivRunActive"
                android:layout_weight="1"
                android:background="@color/colorBlack"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/run_inactive"
                android:id="@+id/ivSleepFaceDown"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/run_inactive"
                android:id="@+id/ivSleepFaceUp"
                android:layout_weight="1" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/line"
            android:id="@+id/imWhiteLine" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/layoutGraphsUpper"
            android:layout_height="140dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/graph08"
                android:id="@+id/imHeartRateGraph"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/graph08"
                android:id="@+id/imRespirationRateGraph"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:id="@+id/layoutGraphsBottom">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/graph08"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:id="@+id/imCoreTemp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/graph08"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:id="@+id/imSkinTemp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/layoutButton">

            <Button
                android:text="9 Liner Request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btLinerRequest"
                android:layout_gravity="center"
                android:textAlignment="center" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
