<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_help"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context="com.drdc1.medic.HelpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll43"
        >

        <ImageButton
            app:srcCompat="@drawable/backarrow"
            android:background="@color/black"
            android:id="@+id/ibBack"
            android:layout_weight="0.07"
            android:layout_height="match_parent"
            android:layout_width="20dp" />

        <TextView
            android:text="Help Page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvHelpHeader"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_marginRight="240dp"
            android:textColor="@color/white"
            android:layout_weight="0.14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:id="@+id/ll44"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"
            android:gravity="left"
            android:layout_weight="1"
            android:text="FAQ" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ll45"
                android:layout_marginTop="20dp"
                android:background="@color/grey"
                android:layout_marginLeft="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv17"
                    android:layout_width="94dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:background="@drawable/border2"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:text="Parameters" />

                <TextView
                    android:id="@+id/tv18"
                    android:layout_width="94dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:background="@drawable/border2"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:text="Bad (lb)" />

                <TextView
                    android:id="@+id/tv19"
                    android:layout_width="94dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:background="@drawable/border2"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:text="Inter (lb)" />

                <TextView
                    android:id="@+id/tv20"
                    android:layout_width="94dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:background="@drawable/border2"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:text="Good" />

                <TextView
                    android:id="@+id/tv21"
                    android:layout_width="94dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:background="@drawable/border2"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:text="Inter (ub)" />
                <TextView
                    android:id="@+id/tv22"
                    android:layout_width="94dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:background="@drawable/border2"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:text="Bad (ub)" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ll46"
                android:layout_marginTop="10dp"
                android:background="@color/grey"
                android:layout_marginLeft="16dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv23"
                    android:layout_width="94dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:background="@drawable/border2"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:text="Heart Rate" />

                <TextView
                    android:id="@+id/tv24"
                    android:layout_width="94dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:background="@drawable/border2"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:text="30 -" />

                <TextView
                    android:id="@+id/tv25"
                    android:layout_width="94dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:background="@drawable/border2"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:text="30-40" />

                <TextView
                    android:id="@+id/tv26"
                    android:layout_width="94dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:background="@drawable/border2"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:text="40-70" />

                <TextView
                    android:id="@+id/tv27"
                    android:layout_width="94dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:background="@drawable/border2"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:text="70 - 100" />
                <TextView
                    android:id="@+id/tv28"
                    android:layout_width="94dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:background="@drawable/border2"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:text="100 +" />

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ll47"
                android:layout_marginTop="10dp"
                android:background="@color/grey"
                android:layout_marginLeft="16dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv29"
                    android:layout_width="94dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:background="@drawable/border2"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:text="Respiration Rate" />

                <TextView
                    android:id="@+id/tv30"
                    android:layout_width="94dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:background="@drawable/border2"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:text="No Info" />

                <TextView
                    android:id="@+id/tv31"
                    android:layout_width="94dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:background="@drawable/border2"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:text="12 -" />

                <TextView
                    android:id="@+id/tv32"
                    android:layout_width="94dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:background="@drawable/border2"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:text="12 - 18" />

                <TextView
                    android:id="@+id/tv233"
                    android:layout_width="94dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:background="@drawable/border2"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:text="18 +" />
                <TextView
                    android:id="@+id/tv34"
                    android:layout_width="94dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:background="@drawable/border2"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:text="No Info" />

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ll48"
                android:layout_marginTop="10dp"
                android:background="@color/grey"
                android:layout_marginLeft="16dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv35"
                    android:layout_width="94dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:background="@drawable/border2"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:text="Core Temp" />

                <TextView
                    android:id="@+id/tv36"
                    android:layout_width="94dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:background="@drawable/border2"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:text="35.0 -" />

                <TextView
                    android:id="@+id/tv37"
                    android:layout_width="94dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:background="@drawable/border2"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:text="35.1 - 36.0" />

                <TextView
                    android:id="@+id/tv38"
                    android:layout_width="94dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:background="@drawable/border2"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:text="36.1 - 37.8" />

                <TextView
                    android:id="@+id/tv39"
                    android:layout_width="94dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:background="@drawable/border2"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:text="37.9 - 39.0" />
                <TextView
                    android:id="@+id/tv40"
                    android:layout_width="94dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:background="@drawable/border2"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:text="39 +" />

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ll49"
                android:layout_marginTop="10dp"
                android:background="@color/grey"
                android:layout_marginLeft="16dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv41"
                    android:layout_width="94dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:background="@drawable/border2"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:text="Skin Temp" />

                <TextView
                    android:id="@+id/tv42"
                    android:layout_width="94dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:background="@drawable/border2"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:text="25.0 - " />

                <TextView
                    android:id="@+id/tv43"
                    android:layout_width="94dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:background="@drawable/border2"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:text="25.0 - 32.0" />

                <TextView
                    android:id="@+id/tv44"
                    android:layout_width="94dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:background="@drawable/border2"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:text="32.1 - 36.0" />

                <TextView
                    android:id="@+id/tv45"
                    android:layout_width="94dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:background="@drawable/border2"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:text="36.0 - 37.0" />
                <TextView
                    android:id="@+id/tv46"
                    android:layout_width="94dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:background="@drawable/border2"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:text="37 +" />

            </LinearLayout>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="160dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bthelp1"
            android:layout_width="100dp"
            android:layout_marginLeft="352dp"
            android:layout_height="match_parent"
            android:text="Cancel" />

        <Button
            android:id="@+id/bthelp2"
            android:layout_width="100dp"
            android:layout_marginLeft="30dp"
            android:layout_height="match_parent"
            android:text="Save" />
    </LinearLayout>

</LinearLayout>
