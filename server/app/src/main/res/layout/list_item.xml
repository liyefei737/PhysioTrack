<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey">

    <TextView
        android:id="@+id/name"
        android:layout_width="50dp"
        android:layout_height="23dp"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:textStyle="bold" />

    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="@android:color/black" />

    <ImageView
        android:id="@+id/overal_status"
        android:layout_width="50dp"
        android:layout_height="23dp"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textStyle="bold" />

    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="@android:color/black" />

    <ImageView
        android:id="@+id/body_position"
        android:layout_width="50dp"
        android:layout_height="23dp"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textStyle="bold" />

    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="@android:color/black" />

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="23dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/hr_img"
            android:layout_width="20dp"
            android:layout_height="23dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:gravity="center" />

        <TextView
            android:id="@+id/hr_text"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginRight="2dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="@android:color/black" />

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="23dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/br_img"
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:gravity="center" />

        <TextView
            android:id="@+id/br_text"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginRight="2dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="@android:color/black" />

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="23dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/skin_tmp_img"
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:gravity="center" />

        <TextView
            android:id="@+id/skin_tmp_text"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginRight="2dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="@android:color/black" />

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="23dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/core_tmp_img"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:gravity="center" />

        <TextView
            android:id="@+id/core_tmp_text"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginRight="2dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="@android:color/black" />

    <TextView
        android:id="@+id/fatigue_level"
        android:layout_width="50dp"
        android:layout_height="23dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:textStyle="bold" />
</LinearLayout>