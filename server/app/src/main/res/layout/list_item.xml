<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey">

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textStyle="bold"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="3dp"/>

    <ImageView
        android:id="@+id/overal_status"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="-60dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:gravity="center_vertical" />

    <ImageView
        android:id="@+id/body_position"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="-60dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:gravity="center_vertical" />


    <ImageView
        android:id="@+id/hr_img"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="-20dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.5"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/hr_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-27dp"
        android:layout_marginTop="7dp"
        android:layout_weight="0.5"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/br_img"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="-20dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.5"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/br_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-27dp"
        android:layout_marginTop="7dp"
        android:layout_weight="0.5"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/skin_tmp_img"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="-20dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.5"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/skin_tmp_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-27dp"
        android:layout_marginTop="7dp"

        android:layout_weight="0.5"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/core_tmp_img"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="-20dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.5"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/core_tmp_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-27dp"
        android:layout_marginTop="7dp"
        android:layout_weight="0.5"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fatigue_level"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textStyle="bold" />
</LinearLayout>