 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@color/black"
        tools:context="com.drdc1.medic.IndividualSoldierTab">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/searchbar"
            android:layout_alignParentTop="true">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="346dp"
                android:layout_height="match_parent"
                android:id="@+id/layoutSearch">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/search3"
                    android:background="@color/grey"
                    android:id="@+id/serchIcon" />

                <EditText
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:id="@+id/etSearch"
                    android:textAlignment="center"
                    android:hint="Search for Soldier Name"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/fontsize3"
                    android:backgroundTint="@color/grey"
                    android:layout_marginRight="0dp"
                    android:background="@color/grey"
                    android:layout_width="match_parent" />

                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    app:srcCompat="@drawable/ic_help"
                    android:id="@+id/ibHelp"
                    android:background="@color/black" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/searchbar"
            android:id="@+id/soldierInfo">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="183dp"
                    android:layout_height="113dp"
                    android:weightSum="1"
                    android:layout_weight="1">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <TextView
                            android:text="Soldier Name :"
                            android:layout_height="match_parent"
                            android:id="@+id/tvSoldierName"
                            android:paddingBottom="24dp"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:layout_width="64dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="0.03"/>

                        <TextView
                            android:text="TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/NameNonEditable"
                            android:layout_weight="1"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <TextView
                            android:text="Gender:"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/tvGender"
                            android:paddingBottom="10dp"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:layout_weight="0.05"/>

                        <TextView
                            android:text="TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/GenderNonEditable"
                            android:layout_weight="1"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="107dp"
                    android:layout_height="match_parent"
                    android:id="@+id/layoutGender"
                    >

                    <TextView
                        android:text="Age :"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvAge"
                        android:textColor="@color/white"
                        android:layout_marginTop="20dp"
                        android:textSize="@dimen/fontsize3"
                        android:textAlignment="center" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="54dp"
                        android:id="@+id/AgeNonEditable"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layoutBody">

                <TextView
                    android:text="Body Orientation :"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/tvBody"
                    android:layout_weight="1.80"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fontsize3"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/standing_inactive"
                    android:id="@+id/ivStanding"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/run2"
                    android:id="@+id/ivRunActive"
                    android:layout_weight="1"
                    android:background="@color/black"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/run_inactive"
                    android:id="@+id/ivSleepFaceDown"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/run_inactive"
                    android:id="@+id/ivSleepFaceUp"
                    android:layout_weight="1" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/line"
                android:id="@+id/imWhiteLine" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:id="@+id/layoutGraphsUpper"
                android:layout_height="100dp"
                android:weightSum="1">

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/hrrchart"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    />

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/resprchart"
                    android:layout_width="141dp"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:id="@+id/layoutGraphsBottom"
                android:weightSum="1">

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/skinrchart"
                    android:layout_width="150dp"
                    android:layout_height="75dp"
                    />

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/ctrchart"
                    android:layout_width="143dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.61"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:id="@+id/layoutButton">

                <Button
                    android:text="9 Liner Request"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btLinerRequest"
                    android:layout_gravity="center"
                    android:textAlignment="center" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
