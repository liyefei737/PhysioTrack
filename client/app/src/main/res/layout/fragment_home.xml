<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="capstone.client.HomeFragment"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_top"
        android:textSize="@dimen/title_bar"
        android:gravity="center"
        android:textColor="@color/white"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/white_line"
        android:layout_marginBottom="5dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/white_user_2"
        android:id="@+id/settingsBtn"
        android:layout_marginTop="0dp"
        android:background="@color/bg"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="13dp"
        android:layout_gravity="right"
        android:onClick="edit_info"/>
    <ImageView
        android:layout_width="278dp"
        android:layout_height="268dp"
        android:src="@drawable/home_center_green"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
